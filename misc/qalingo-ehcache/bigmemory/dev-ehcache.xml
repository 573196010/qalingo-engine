<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">
    <defaultCache eternal="true" maxElementsInMemory="100" overflowToDisk="false" statistics="true"/>
	<!--
    <managementRESTService enabled="true" bind="0.0.0.0:9888" />
	-->
    <cache name="web_category_cache" timeToIdleSeconds="14400" timeToLiveSeconds="86400" maxElementsInMemory="100">
        <sizeOfPolicy maxDepth="300" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="web_product_cache" timeToIdleSeconds="14400" timeToLiveSeconds="86400" maxElementsInMemory="100">
        <sizeOfPolicy maxDepth="200" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="web_store_cache" timeToIdleSeconds="14400" timeToLiveSeconds="86400" maxElementsInMemory="100">
        <sizeOfPolicy maxDepth="200" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="web_cms_content_cache" timeToIdleSeconds="14400" timeToLiveSeconds="86400" maxElementsInMemory="100">
        <sizeOfPolicy maxDepth="100" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="web_html_cache" timeToIdleSeconds="1" timeToLiveSeconds="1" maxElementsInMemory="1" >
        <sizeOfPolicy maxDepth="200" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="web_misc_cache" timeToLiveSeconds="600" timeToIdleSeconds="500" maxElementsInMemory="100">
        <sizeOfPolicy maxDepth="400" maxDepthExceededBehavior="abort"/>
    </cache>
    <cache name="web_links_cache" timeToLiveSeconds="600" timeToIdleSeconds="500" maxElementsInMemory="100">
        <sizeOfPolicy maxDepth="500" maxDepthExceededBehavior="abort"/>
    </cache>
</ehcache>
