<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd	   ">

	<context:component-scan base-package="com.lvmh.pcis.onedior.ws.client" />
		
    <import resource="classpath:conf/spring/qalingo-core-remote-ws-common.xml" />

    <bean id="storeClient" class="fr.hoteia.qalingo.ws.client.StoreClient">
        <property name="defaultUri" value="http://localhost:9090/ws/services/store"/>
        <property name="marshaller" ref="marshaller"/>
        <property name="unmarshaller" ref="marshaller"/>
    </bean>

</beans>
