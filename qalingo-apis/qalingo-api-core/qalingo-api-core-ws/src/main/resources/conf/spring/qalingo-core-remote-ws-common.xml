<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd	   ">

	<bean id="xsdSchemas" class="org.springframework.xml.xsd.commons.CommonsXsdSchemaCollection">
		<property name="xsds">
			<list>
				<value>classpath:xsd/store.xsd</value>
				<value>classpath:store-ws.xsd</value>
			</list>
		</property>
		<property name="inline" value="true" />
	</bean>

	<bean id="marshaller" class="org.springframework.oxm.jaxb.Jaxb2Marshaller">
		<property name="contextPath" value="fr.hoteia.qalingo.ws.store" />
		<property name="schemas">
			<list>
				<value>classpath:xsd/store.xsd</value>
				<value>classpath:store-ws.xsd</value>
			</list>
		</property>
	</bean>

	<bean class="org.springframework.ws.server.endpoint.adapter.GenericMarshallingMethodEndpointAdapter">
		<constructor-arg ref="marshaller" />
	</bean>
</beans>
